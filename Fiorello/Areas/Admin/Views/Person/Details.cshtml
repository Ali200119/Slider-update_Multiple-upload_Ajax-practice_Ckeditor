@model Person

@{
    ViewBag.Title = "Person Details";
}

<div style="width: 70%; margin-left: 40px">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Position</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img style="width: 250px; height: 250px; border-radius: unset; object-fit: cover" src="~/img/@Model.Image" /></td>
                <td>@Model.Name</td>
                <td>@Model.Position</td>
            </tr>
        </tbody>
    </table>

    <a class="btn mt-5" style="color: white;background-color: gray" asp-area="Admin" asp-controller="Person" asp-action="Index">Back</a>
</div>