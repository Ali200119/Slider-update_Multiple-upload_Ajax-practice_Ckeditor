@model Expert

@{
    ViewBag.Title = "Edit Expert";
}

<form style="margin: 40px 40px" method="post" asp-area="Admin" asp-controller="Expert" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" id="Title" asp-for="Title">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input type="text" class="form-control" id="Description" asp-for="Description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div style="display: flex;" class="mt-5">
        <button type="submit" class="btn btn-primary">Update</button>
        <a class="btn ml-3" style="color: white; background-color: gray; margin-left: 10px " asp-area="Admin" asp-controller="Expert" asp-action="Index">Cancel</a>
    </div>
</form>